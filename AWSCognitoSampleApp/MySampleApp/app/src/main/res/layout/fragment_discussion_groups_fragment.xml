<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.PocketMoodle.DiscussionGroupsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/submitButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/change_class_spinner"
            android:layout_alignTop="@+id/change_class_spinner"
            android:layout_toRightOf="@+id/change_class_spinner"
            android:text="Go" />

        <Spinner
            android:id="@+id/change_class_spinner"
            android:layout_width="166dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_button_discussion"
        android:padding="5dp"
        android:layout_marginTop="70dp"
        android:id="@+id/add_discussion_group"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="@string/remove_button_discussion"
        android:padding="5dp"
        android:id="@+id/remove_discussion_group"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/add_discussion_group"/>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/discussion_group_list"
        android:padding="5dp"
        android:layout_below="@+id/add_discussion_group"/>

</RelativeLayout>