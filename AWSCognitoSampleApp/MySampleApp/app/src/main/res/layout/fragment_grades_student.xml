<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/gradesContent"
        android:layout_width="150pt"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Grades"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/gradesItemsText"
            android:layout_width="75pt"
            android:layout_height="10pt"
            android:gravity="center"
            android:text="Grades Items"
            android:layout_below="@+id/title"
            android:layout_alignBottom="@+id/gradesText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/gradesText"
            android:layout_width="75pt"
            android:layout_height="10pt"
            android:gravity="center"
            android:text="Grades"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/gradesItemsText"
            android:layout_toEndOf="@+id/gradesItemsText" />

        <ListView
            android:id="@+id/listOfGrades"
            android:layout_width="75pt"
            android:layout_height="match_parent"
            android:layout_below="@+id/gradesText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ListView
            android:id="@+id/listOfGradesItems"
            android:layout_width="75pt"
            android:layout_height="match_parent"
            android:layout_below="@+id/gradesItemsText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>