<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grades"
        android:gravity="center"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/gradeitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grade item"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gradeitem"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Grade"
        android:textSize="30sp" />

    <ListView
        android:id="@+id/gradeitemlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/gradeitem"
        android:layout_alignEnd="@+id/gradeitem"
        android:layout_below="@+id/gradeitem" />

    <ListView
        android:id="@+id/gradelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grade"
        android:layout_alignLeft="@+id/grade"
        android:layout_alignStart="@+id/grade" />




</RelativeLayout>