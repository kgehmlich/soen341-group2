<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.PocketMoodle.DocumentsFragment"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dp"
    android:minWidth="300dp">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/submitButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/change_class_spinner"
            android:layout_alignTop="@+id/change_class_spinner"
            android:layout_toRightOf="@+id/change_class_spinner"
            android:text="Go" />

    <Spinner
        android:id="@+id/change_class_spinner"
        android:layout_width="166dp"
        android:layout_height="wrap_content" />

    </RelativeLayout>
    <TextView
        android:text="@string/click_to_upload_document"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="25sp"/>

    <TextView
        android:text="@string/default_status"
        android:id="@+id/uploadStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="12sp"
        android:textColor="#ffcc0000" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/uploadDocument"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:text="@string/upload_document"/>

        <Button
            android:id="@+id/openDiscussionBoard"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:layout_below="@+id/uploadDocument"
            android:text="@string/open_discussion_board"/>

    </RelativeLayout>

</LinearLayout>
